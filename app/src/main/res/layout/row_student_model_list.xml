<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tushar"
        android:textColor="@color/colorBlack"
        android:textSize="16sp">

    </TextView>

    <TextView
        android:id="@+id/tvStudentLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tvStudentName"
        android:text="Patil"
        android:textColor="@color/colorBlack"
        android:textSize="16sp">

    </TextView>

    <TextView
        android:id="@+id/tvStudentEmailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStudentName"
        android:layout_marginTop="5dp"
        android:text="tusharpatil@gmail.com"
        android:textColor="@color/colorBlack">

    </TextView>

    <TextView
        android:id="@+id/tvStudentMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStudentEmailId"
        android:layout_marginTop="5dp"
        android:text="1234567890"
        android:textColor="@color/colorBlack">

    </TextView>

    <ImageView
        android:id="@+id/imgStudentImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/google_icon">

    </ImageView>

</RelativeLayout>